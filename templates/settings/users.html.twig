{% extends 'base.html.twig' %}

{% block title %}{{ 'user.management' | trans({}, 'patchtracking')}}{% endblock %}


{% block content %}

    <!-- Content Header (Page header) -->

    <section class="content-header">
        <div class="container-fluid">
          <div class="row mb-2">
            <div class="col-sm-6">
                <h2>{{ 'user.users' | trans({}, 'patchtracking')}}</h2>
            </div>

          </div>
        </div><!-- /.container-fluid -->
      </section>

      <!-- Main content -->
      <section class="content">

        <div class="col-md-12">
          <div class="row">

          <!-- Manage Users  -->
          <div class="col-md-6">

            <div class="card card-primary">
                <div class="card-header">
                <h3 class="card-title">{{ 'user.management' | trans({}, 'patchtracking')}}</h3>
                  </div>
              <div class="card-body">

                  <table class="table">
                      <thead>
                      <tr>
                          <th scope="col">{{ 'global.name' | trans({}, 'patchtracking')}}</th>
                          <th scope="col">{{ 'user.email' | trans({}, 'patchtracking')}}</th>
                          <th scope="col">{{ 'user.authentification_method' | trans({}, 'patchtracking')}}</th>
                          <th scope="col"  style="width: 20%"></th>
                      </tr>
                      </thead>
                      <tbody>
                          {% for user in users %}
                          <tr>
                              <td>{{ user.fullName }}</td>
                              <td>{{ user.email }}</td>
                              <td>
                                {% if user.ldapAuth == 1 %}
                                  LDAP
                                {% else %}
                                  Local
                                  {% endif %}
                              </td>
                              <td class="project-actions text-right">
                                <a class="btn btn-danger btn-sm" href="{{ path('settings.user.delete', {'id': user.id} )}}">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>

                          </tr>
                          {% endfor %}
                      </tbody>
                  </table>

              </div>


          </div>
          </div>

          <div class="col-md-6"></div>
            
          </div>
        </div>
      </section>
      <!-- /.content -->
</div>


{% endblock %}

{% block javascripts %}
  {{ parent() }}

  <script type="text/javascript" src="{{ asset("assets/js/patchtracking.js")}}"></script>
{% endblock %}
